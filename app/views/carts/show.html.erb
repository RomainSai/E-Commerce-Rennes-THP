                <div>
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Amount</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>
                                    <div class="block-image-2">
                                        <%= link_to image_tag item.image_url, :class =>"img-fluid"%>
                                    </div>
                                </td>
                                <td><%= item.title %></td>
                                <td><%= item.price %>â‚¬</td>
                            </tr>
                        </tbody>
                    </table>
