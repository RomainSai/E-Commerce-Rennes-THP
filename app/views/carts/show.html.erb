<div class="container">  
    <div class="col-lg-8">
        <div class="main-content">
        <!-- Page title -->
            <div class="page-title">
                <h3>Votre Panier: </h3>
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-12">                                   
                        </div>
                        <div class="col-lg-6 col-12">
                        </div>
                    </div>
            </div>

        <!-- Order history table -->
        <% @cart.items.each do |item| %>
