
<section class="slice-lg has-bg-cover bg-size-cover"  bottom center;>
            <div class="container">
                <div class="row justify-content-center cols-xs-space">
                    <div class="col-lg-4">
                        <div class="form-card form-card--style-2 z-depth-2-top">
                            <div class="form-header text-center">
                                <div class="form-header-icon">
                                    <i class="icon ion-log-in"></i>
                                </div>
                            </div>
                            <div class="form-body">
                                <div class="text-center px-2">
                                    <h4 class="heading heading-4 strong-400 mb-4">S'enregistrer</h4>
                                </div>
                                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                <%= devise_error_messages! %>

                                <form class="form-default" role="form">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <%= f.label :name %><br />
                                                <%= f.text_field :name, autofocus: true, autocomplete: "name", :class =>"form-control form-control-lg" %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group has-feedback">
                                                <%= f.label :email %><br />
                                                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>"form-control form-control-lg" %>
                                            </div>
                                        </div>
                                    </div>

                                    <form class="form-default" role="form">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <%= f.label :password %>
                                                <% if @minimum_password_length %>
                                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                                                <% end %><br />
                                                <%= f.password_field :password, autocomplete: "new-password", :class =>"form-control form-control-lg" %>
                                                
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group has-feedback">
                                                <%= f.label :password_confirmation %><br />
                                                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class =>"form-control form-control-lg"%>
                                            </div>
                                        </div>
                                    </div>
                                    <%= f.submit "Sign up", :class =>"btn btn-styled btn-lg btn-block btn-base-1 mt-4"%>
                                    <% end %>
                                </form>
                                <%= render "devise/shared/links" %>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

