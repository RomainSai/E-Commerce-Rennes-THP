<section class="slice-sm sct-color-1">
                        <div class="profile">
                            <div class="container">
                                <div class="row cols-xs-space cols-sm-space cols-md-space">
                                    <div class="col-lg-4">
                                        <div class="sidebar sidebar--style-2 no-border">
                                            <div class="widget">
        <!-- Profile picture -->
        <div class="profile-picture profile-picture--style-2">
            <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, :class=> "img-center"%>
            <% else %>
            <%= image_tag 'https://s3.eu-west-3.amazonaws.com/projet.thp.boutique.en.ligne/profile/default-avatar.jpg', :class=> "img-center"%>
            <% end %>
            <a href="#" class="btn-aux">
                <i class="ion ion-edit"></i>
            </a>
        </div>

        <!-- Profile details -->
        <div class="profile-details">
            <h2 class="heading heading-4 strong-500 profile-name"><%= @user.name %></h2>

        </div>


    </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-8">
                                        <div class="main-content">
                                            <!-- Page title -->
                                            <div class="page-title">
                                                <div class="row align-items-center">
                                                    <div class="col-lg-6 col-12">
                                                        <h2 class="heading heading-5 text-capitalize strong-500 mb-0">
                                                            <a href="#" class="link text-underline--none">
                                                                
                                                                <i class="ion-ios-arrow-back"></i> Données utilisateur
                                                            </a>
                                                        </h2>
                                                    </div>
                                                    <div class="col-lg-6 col-12">

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="link-menu link-menu--style-3 py-4 border-bottom">

                                                <%= link_to "Données", user_path(current_user.id) %>
                                                <%= link_to "Modifier vos données", edit_user_registration_path(current_user.id) %>
                                                <%= link_to "Commandes", users_order_path(current_user.id) %>
                                            </div>

                                            <!-- Account settings -->
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <form class="form-default" data-toggle="validator" role="form">
                                                        <!-- General information -->
                                                        <div class="card no-border bg-transparent">
                                                            <div class="card-title px-0 pb-0 no-border">
                                                                <h3 class="heading heading-6 strong-600">
                                                                    Nom
                                                                </h3>
                                                                <p class="mt-1 mb-0">
                                                                   
                                                                </p>
                                                            </div>
                                                            <div class="card-body px-0">
                                                                <div class="row align-items-center">
                                                                    <div class="col-md-6 col-lg-4">
                                                                        <div class="form-group">
                                                                            
                                                                            <input type="email" class="form-control form-control-lg" value= <%= @user.name %> disabled>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <hr class="mt-0 mb-0">

                                                        <!-- Account info -->
                                                        <div class="card no-border bg-transparent">
                                                            <div class="card-title px-0 pb-0 no-border">
                                                                <h3 class="heading heading-6 strong-600">
                                                                    Email
                                                                </h3>
                                                            </div>
                                                            <div class="card-body px-0">
                                                                <div class="row align-items-center">
                                                                    <div class="col-md-6 col-lg-4">
                                                                        <div class="form-group">
                                                                            
                                                                            <input type="email" class="form-control form-control-lg" value= <%= @user.email %> disabled>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>

                                            <hr class="mt-0 mb-0">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
