<h1>Achat de l'image <%= @order.item_sku %></h1>
<%= form_tag order_charges_path(@order) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Tarif : <%= humanized_money_with_symbol(@order.amount_cents) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Paiement de votre commande"
          data-amount="<%= @order %>"
          data-currency="<%= @order.amount.currency %>"
          data-locale="auto"></script>
<% end %>
